@model CultivaTech.Models.Fornecedor

@{
    ViewData["Title"] = "Excluir Fornecedor";
}

<div class="container-fluid">
    <!-- Título da Página -->
    <h1 class="h3 mb-3">Excluir Fornecedor</h1>
    <a asp-action="Index" class="btn btn-primary mb-3">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>

    <!-- Confirmação de Exclusão -->
    <div class="card shadow">
        <div class="card-header">
            <h5 class="m-0 text-danger">Tem certeza que deseja excluir este fornecedor?</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3">Contato</dt>
                <dd class="col-sm-9">@Model.Contato</dd>

                <dt class="col-sm-3">Endereço</dt>
                <dd class="col-sm-9">@Model.Endereco</dd>
            </dl>
        </div>
        <div class="card-footer">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Excluir
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
