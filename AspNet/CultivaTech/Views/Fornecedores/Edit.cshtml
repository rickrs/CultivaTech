@model CultivaTech.Models.Fornecedor

@{
    ViewData["Title"] = "Editar Fornecedor";
}

<div class="container-fluid">
    <!-- Título da Página -->
    <h1 class="h3 mb-3">Editar Fornecedor</h1>
    <a asp-action="Index" class="btn btn-primary mb-3">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>

    <!-- Formulário de Edição -->
    <div class="card shadow">
        <div class="card-header">
            <h5 class="m-0">Editar Dados do Fornecedor</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Nome" class="form-label">Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome do fornecedor" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Contato" class="form-label">Contato</label>
                    <input asp-for="Contato" class="form-control" placeholder="Digite o contato do fornecedor" />
                    <span asp-validation-for="Contato" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Endereco" class="form-label">Endereço</label>
                    <input asp-for="Endereco" class="form-control" placeholder="Digite o endereço do fornecedor" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Salvar Alterações
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Toastr -->
    <script src="~/lib/toast/js/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "5000"
            };

        @if (TempData.ContainsKey("Mensagem"))
        {
            <text>
                    toastr.success("@TempData["Mensagem"]");
            </text>
        }

        @if (TempData.ContainsKey("Erro"))
        {
            <text>
                    toastr.error("@TempData["Erro"]");
            </text>
        }
                });
    </script>
}
