@model CultivaTech.Models.Carrinho

<div class="container mt-4">
    <h1>Seu Carrinho</h1>

    @if (Model.Itens == null || !Model.Itens.Any())
    {
        <p>Seu carrinho está vazio.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Produto</th>
                    <th>Quantidade</th>
                    <th>Preço</th>
                    <th>Total</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Itens)
                {
                    <tr>
                        <td>@item.Produto.Nome</td>
                        <td>@item.Quantidade</td>
                        <td>@item.Produto.Preco</td>
                        <td>@(item.Produto.Preco * item.Quantidade).ToString("C")</td>
                        <td>
                            <form asp-action="Remover" method="post">
                                <input type="hidden" name="itemCarrinhoId" value="@item.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Remover</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary">Continuar Comprando</a>
    
</div>
