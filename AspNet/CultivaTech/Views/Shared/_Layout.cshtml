<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CultivaTech</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Font Awesome CSS (v4.7.0) -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/font-awesome.min.css" />

    <!-- Toastr CSS (v2.1.1) -->
    <link rel="stylesheet" href="~/lib/toast/css/toastr.min.css" />

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CultivaTech</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Login" asp-action="Index">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-4 border-top">
        <div class="container">
            <small>&copy; 2024 CultivaTech. Todos os direitos reservados.</small>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Toastr JS (v2.1.1) -->
    <script src="~/lib/toast/js/toastr.min.js"></script>

    <!-- jQuery Validation -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Exibir mensagens do TempData como Toast -->
    <script>
        $(document).ready(function () {
        @if (TempData["Mensagem"] != null)
        {
            <text>
                    toastr.success('@TempData["Mensagem"]');
            </text>
        }
        @if (TempData["Erro"] != null)
        {
            <text>
                    toastr.error('@TempData["Erro"]');
            </text>
        }
                });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
