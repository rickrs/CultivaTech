@model IEnumerable<CultivaTech.Models.Usuario>

@{
    ViewData["Title"] = "Usuários";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Usuários</h1>
        <a asp-action="Create" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> Novo Usuário
        </a>
    </div>

    <!-- Lista de Usuários -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lista de Usuários</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Tipo</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var usuario in Model)
                            {
                                <tr>
                                    <td>@usuario.Id</td>
                                    <td>@usuario.Nome</td>
                                    <td>@usuario.Email</td>
                                    <td>@usuario.Tipo</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@usuario.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> Detalhes
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-warning btn-sm">
                                            <i class="fas fa-edit"></i> Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@usuario.Id" class="btn btn-danger btn-sm">
                                            <i class="fas fa-trash"></i> Excluir
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">Nenhum usuário encontrado.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Toastr -->
    <script src="~/lib/toast/js/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "5000"
            };

        @if (TempData.ContainsKey("Mensagem"))
        {
            <text>
                    toastr.success("@TempData["Mensagem"]");
            </text>
        }

        @if (TempData.ContainsKey("Erro"))
        {
            <text>
                    toastr.error("@TempData["Erro"]");
            </text>
        }
                });
    </script>
}
