@model CultivaTech.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<div class="container-fluid">
    <h1 class="h3 mb-3">Excluir Produto</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-danger">Confirmação de Exclusão</h6>
        </div>
        <div class="card-body">
            <p>Tem certeza de que deseja excluir o produto abaixo?</p>
            <table class="table">
                <tr>
                    <th>Nome</th>
                    <td>@Model.Nome</td>
                </tr>
                <tr>
                    <th>Preço</th>
                    <td>@Model.Preco</td>
                </tr>
                <tr>
                    <th>Quantidade em Estoque</th>
                    <td>@Model.QuantidadeEmEstoque</td>
                </tr>
                <tr>
                    <th>Foto</th>
                    <td>
                        @if (!string.IsNullOrEmpty(Model.fotoProduto))
                        {
                            <img src="~/uploads/@Model.fotoProduto" alt="Foto do Produto" style="max-width: 150px;" />
                        }
                        else
                        {
                            <span>Sem Foto</span>
                        }
                    </td>
                </tr>
            </table>
            <form method="post">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Excluir
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
