@model IEnumerable<CultivaTech.Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="container-fluid">
    <!-- Título da Página -->
    <h1 class="h3 mb-3">Produtos</h1>
    <a asp-action="Create" class="btn btn-primary mb-3">
        <i class="fas fa-plus"></i> Novo Produto
    </a>

    <!-- Tabela de Produtos -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Quantidade em Estoque</th>
                    <th>Foto</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@(string.IsNullOrEmpty(item.Nome) ? "Não informado" : item.Nome)</td>
                        <td>@(item.Preco == 0 ? "Não informado" : item.Preco)</td>
                        <td>@(item.QuantidadeEmEstoque == 0 ? "Não informado" : item.QuantidadeEmEstoque.ToString())</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.fotoProduto))
                            {
                                <img src="~/uploads/@item.fotoProduto" alt="Foto do Produto" style="width: 100px; height: auto;" />
                            }
                            else
                            {
                                <span>Sem Foto</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="fas fa-info-circle"></i> Detalhes
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i> Excluir
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
