@model CultivaTech.Models.Produto

<div class="container-fluid">
    <h1 class="h3 mb-3">Editar Produto</h1>

    <form id="produtoForm" asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Preco">Preço</label>
            <input asp-for="Preco" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="Preco" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="QuantidadeEmEstoque">Quantidade</label>
            <input asp-for="QuantidadeEmEstoque" type="number" class="form-control" />
            <span asp-validation-for="QuantidadeEmEstoque" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Nova Foto</label>
            <input type="file" asp-for="fotoProduto" class="form-control" />
            
        </div>

        <button type="submit" class="btn btn-success mt-3">Salvar</button>
    </form>
</div>
